@model EmployeeUpdateViewModel

@{
    ViewBag.Title = "Update Employee";
}

<form enctype="multipart/form-data" asp-controller="employee" asp-action="update" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" placeholder="Product Id" class="form-control" />
            <span asp-validation-for="Id"></span>
        </div>
    </div>



    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Role" placeholder="Role" class="form-control" asp-items="Html.GetEnumSelectList<RoleEnum>()">>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImagePath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImagePath" placeholder="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath"></span>
        </div>
    </div>



    <button type="submit" class="btn btn-primary">Update</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
