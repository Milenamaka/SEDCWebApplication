@model EmployeeDetailsViewModel

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Model.ImagePath" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.PageTitle</h5>
        <p class="card-text">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">EMAIL: @Model.Name</li>
                <li class="list-group-item">nista: @Model.Role</li>
            </ul>
        </p>
        <a class="btn btn-primary" asp-controller="employee" asp-action="update" asp-route-id="@Model.Id">Update employee</a>
    </div>
</div>


