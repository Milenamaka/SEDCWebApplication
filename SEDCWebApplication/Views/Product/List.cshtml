@model IEnumerable<ProductUpdateViewModel>
    <a asp-controller="product" asp-action="create">Create New</a>

    
    <div class="container">
        <div class="card-columns">
            @foreach (var product in Model)
            {

                <div class="card card-user">
                    <img class="card-img-top" src="@product.ImagePath" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <p class="card-text">@product.Description</p>
                        <a asp-controller="product" asp-action="details" asp-route-id="@product.Id">See Profile</a>
                    </div>
                </div>
            }
        </div>
    </div>