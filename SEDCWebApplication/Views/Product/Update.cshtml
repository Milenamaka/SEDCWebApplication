@model ProductCreateViewModel

@{
    ViewBag.Title = "Update Product";
}

<form enctype="multipart/form-data" asp-controller="product" asp-action="update" method="post">
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" placeholder="ProductName" class="form-control" />
            <span asp-validation-for="ProductName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" placeholder="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Size" placeholder="IsDiscounted" class="form-control">
                <option value="small">small</option>
                <option value="medium">medium</option>
                <option value="large">large</option>
                <span asp-validation-for="Size"></span>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" placeholder="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>

            <span asp-validation-for="Photo"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IsDiscounted" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="IsDiscounted" placeholder="IsDiscounted" class="form-control">
                <option value="true">Discounted</option>
                <option value="false">Regular Price</option>
                <span asp-validation-for="IsDiscounted"></span>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" placeholder="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <div asp-validation-summary="All" class="text-danger"></div>


    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
