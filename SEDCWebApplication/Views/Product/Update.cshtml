@model Product

@{
    ViewBag.Title = "Update Product";
}

<form asp-controller="product" asp-action="update" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" placeholder="Product Id" class="form-control" />
            <span asp-validation-for="Id"></span>
        </div>
    </div>



    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" placeholder="ProductName" class="form-control" />
            <span asp-validation-for="ProductName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" placeholder="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Size" placeholder="IsDiscounted" class="form-control">
                <option value="small">small</option>
                <option value="medium">medium</option>
                <option value="large">large</option>
                <span asp-validation-for="Size"></span>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImagePath" class="col-sm-2 col-form-label" alt="https://media.istockphoto.com/vectors/logo-pizza-on-a-white-background-vector-id1220369245"></label>
        <div class="col-sm-10">
            <input asp-for="ImagePath" placeholder="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IsDiscounted" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="IsDiscounted" placeholder="IsDiscounted" class="form-control">
                <option value="true">Discounted</option>
                <option value="false">Regular Price</option>
                <span asp-validation-for="IsDiscounted"></span>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" placeholder="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
